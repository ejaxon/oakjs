          </Segment>
        </Column>
        <Column>
          <Segment appearance="inverted">
            <LoremIpsum tiny/>
          </Segment>

          <Segment appearance="inverted secondary">
            <LoremIpsum tiny/>
          </Segment>

          <Segment appearance="inverted tertiary">
            <LoremIpsum tiny/>
