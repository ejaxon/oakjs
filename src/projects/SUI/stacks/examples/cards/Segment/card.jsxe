  <PageSection title="Appearance">

    <Example title="Text Alignment" hint="<Segment/>">
      <Segment align="left">Left aligned</Segment>
      <Segment align="center">Center aligned</Segment>
      <Segment align="right">Right aligned</Segment>
    </Example>

    <Example title="Clearing" hint="<Segment clearing/>">
      <Segment clearing>
        <Button floated="right">I'm a floated button</Button>
      </Segment>
    </Example>

    <Example title="Floated" hint="<Segment floated='right'/>">
      <Segment floated="left">This segment appears to the left</Segment>
      <Segment floated="right">This segment appears to the right</Segment>
    </Example>

    <Example title="Inverted" hint="<Segment appearance='inverted'/>">
      <Segment appearance='inverted'>
        <LoremIpsum short/>
      </Segment>
    </Example>

    <Example title="Attached" hint="<Segment appearance='attached'/>">
      <Segment appearance='top attached'>
        <LoremIpsum tiny/>
      </Segment>
      <Segment appearance='attached'>
        <LoremIpsum tiny/>
      </Segment>
      <Segment appearance='bottom attached'>
        <LoremIpsum tiny/>
